.section.home
  .row
    .col-md-6
      %h3 Welcome to GAAP Logic
    .col-md-4
      %h3 Subjects
    .col-md-2
      - if current_user
        .pull-right
          = link_to new_project_path, id: 'new-project-link', class: 'btn btn-success', 'data-toggle': 'modal', 'data-target': '#modal' do
            %span.glyphicon.glyphicon-plus
            Start a Project
  .row
    .col-md-6
      = simple_format(@content.content) if @content
    .col-md-6
      .panel-group#accordion{ role: 'tablist', aria: { multiselectable: true } }
        - @subjects.each do |subject|
          %h4
            = link_to subject_description_modal_path(subject), class: 'description-subject-link', 'data-toggle': 'modal', 'data-target': '#modal' do
              = subject.name
