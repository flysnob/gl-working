.modal-header
  %button.close{'data-dismiss': 'modal', type: 'button'}
    %span &times;
  %h4#modal-title.modal-title Add New Project
.modal-body
  = form_for @project, { html: { id: 'new_project', class: 'validate' }} do |f|
    .row
      .col-lg-2
      .col-lg-8.form-group.required
        = f.label :name, class: 'required-label'
        .help-block A short title for the project (limited to 150 characters)
        = f.text_field :name, class: 'form-control', required: true
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8.form-group
        = f.label :description
        .help-block A description of how this project should be used
        = f.text_field :description, class: 'form-control'
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8.form-group
        = f.label :date, class: 'required-label'
        .help-block Enter the transaction date or effective date
        = f.text_field :date, class: 'form-control', 'data-provide': 'datepicker', 'data-date-today-highlight': 'true', 'data-date-autoclose': 'true', autocomplete: 'off', required: true, pattern: '[0-9]{2}/[0-9]{2}/[0-9]{4}', value: f.object.date
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8
        %span.form-group.required
          = f.label :subject, 'Subject', class: 'required-label'
          .help-block
          = f.select :subject, subject_select_options, { include_blank: true }, { class: 'form-control', required: true, data: { placeholder: 'Select subject' } }
      .col-lg-2
.modal-footer
  %a.btn.btn-default{'data-dismiss': 'modal', type: 'button'} Cancel
  %button#add-project-link.btn.btn-primary{ type: 'submit', form: 'new_project', href: '#' } Add project
