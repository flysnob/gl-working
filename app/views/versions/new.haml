.modal-header
  %button.close{'data-dismiss': 'modal', type: 'button'}
    %span &times;
  %h4#modal-title.modal-title Add New Version
.modal-body
  = form_for @version, { html: { id: 'new_version', class: 'validate' }} do |f|
    .row
      .col-lg-2
      .col-lg-8
        %span.form-group.required
          = f.label :subject, 'Subject', class: 'required-label'
          .help-block
          = f.select :subject, subject_select_options, { include_blank: true }, { class: 'form-control', required: true, data: { placeholder: 'Select Subject',} }
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8.form-group.required
        = f.label :version_number, class: 'required-label'
        = f.text_field :version_number, class: 'form-control', required: true
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8.form-group
        = f.label :effective_date
        = f.text_field :effective_date, class: 'form-control', 'data-provide': 'datepicker', 'data-date-today-highlight': 'true', 'data-date-autoclose': 'true', autocomplete: 'off', required: true, pattern: '[0-9]{2}/[0-9]{2}/[0-9]{4}', value: f.object.effective_date
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8.form-group
        = f.label :expiration_date
        = f.text_field :expiration_date, class: 'form-control', 'data-provide': 'datepicker', 'data-date-today-highlight': 'true', 'data-date-autoclose': 'true', autocomplete: 'off', required: false, pattern: '[0-9]{2}/[0-9]{2}/[0-9]{4}', value: f.object.expiration_date
      .col-lg-2
    .row
      .col-lg-2
      .col-lg-8.form-group
        = f.label :status
        = f.text_field :status, class: 'form-control'
      .col-lg-2
.modal-footer
  %a.btn.btn-default{'data-dismiss': 'modal', type: 'button'} Cancel
  %button#add-version-link.btn.btn-primary{ type: 'submit', form: 'new_version', href: '#' } Add version
